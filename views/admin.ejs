<%- layout('base.ejs')%>
<% script("/libs/tinymce/tinymce.min.js") -%>
<% script("/build/js/info.js") -%>
<% script("/build/js/utils.js") -%>
<% script("/build/js/admin.js") -%>
<% script("/javascripts/directives/news_element.js") -%>
