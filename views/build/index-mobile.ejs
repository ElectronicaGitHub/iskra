<%- layout('base-mobile') %><% var sections = { space: 'Космос', physics: 'Физика', tech: 'Технологии' } %><% block('meta', partial('meta_index')) -%><% block('sectionlabel', '| ' + sections[query.section].toUpperCase() ) %><div class="content"><div class="each-post-big"><a href="/article/<%= article._id%>"><div class="photo" style="background-image:url(<%= article.image %>)"></div><div class="text"><span><p class="article-label">Статья</p><p class="_title"><%= article.title %></p></span></div></a></div><% var arr = [true, true, true, false]; L = news.length; for (var i=0; i< L; i++) { %><% var small = arr[~~(Math.random() * arr.length)] %><% if (small) { %><div class="each-post"><a href="/post/<%= news[i]._id%>"><div class="photo" style="background-image:url(<%= news[i].image %>)"></div><div class="text"><span class="_title"><%= news[i].title %></span></div></a></div><% } else { %><div class="each-post-big"><a href="/post/<%= news[i]._id%>"><div class="photo" style="background-image:url(<%= news[i].image %>)"></div><div class="text"><span><p class="news-label">Новость</p><p class="_title"><%= news[i].title %></p></span></div></a></div><% } %><% } %></div><style>.content {
		padding: 0 10px;
		margin-top: 55px;
		width: 300px;
	}
	.each-post {
		margin-bottom: 10px;
		height: 70px;
		border-radius: 4px;
		overflow: hidden;
		background-color: #fff;
		border: 1px solid rgba(0,0,0,.15);
	}
	.each-post p, .each-post-big p {
		padding: 0;
		margin: 0;
	}
	.each-post a, .each-post-big a {
		color: #000;
		text-decoration: none;
	}
	.each-post > a > div {
		float: left;
	}
	.each-post .photo {
		height: 70px;
		width: 70px;
		background-size: 100%;
		background-position: center center;
		background-size: cover;
	}
	.each-post .text {
		padding: 0px 10px;
		line-height: 70px;
	}
	.each-post .text span._title {
		display: inline-block;
		font-family: 'RobCondLight';
		font-size: 15px;
		line-height: 19px;
		vertical-align: middle;
		max-width: 185px;
		max-height: 60px;
	}
	.each-post .text .desc {
		font-family: 'RobCondLight';
		font-size: 14px;
		line-height: 26px;
	}
	/*////*/
	.each-post-big {
		margin-bottom: 10px;
		height: 280px;
		border-radius: 4px;
		overflow: hidden;
		background-color: #fff;
		border: 1px solid rgba(0,0,0,.15);
	}
	.each-post-big .photo {
		height: 200px;
		width: 300px;
		background-size: 100%;
		background-position: center center;
		background-size: cover;	
	}
	.each-post-big .text {
		height: 80px;
		line-height: 80px;
		text-align: center;
		padding: 0 10px;
	}
	.each-post-big .text span {
		display: inline-block;
		font-family: 'RobCondBold';
		font-size: 18px;
		line-height: 20px;
		vertical-align: middle;
	}
	.article-label, .news-label {
		font-size : 15px;
		font-family: 'RobCondLight';
		line-height: 20px;
	}</style>